{
  "name": "fullstack-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build && node ./scripts/generate-sitemap",
    "analyze": "cross-env ANALYZE=true next build",
    "svg": "svgr -d components/social-icons components/social-icons/svgs",
    "svg:share": "svgr -d components/social-share-icons components/social-share-icons/svgs",
    "export": "next export",
    "start": "next start",
    "lint": "next lint",
    "stylelint": "stylelint styles/**/*.scss",
    "stylelint:fix": "stylelint --fix **/*.scss",
    "prettier": "prettier \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)\"",
    "validate": "npm run lint && npm run stylelint && npm run prettier",
    "prepare": "husky install"
  },
  "dependencies": {
    "@mdx-js/loader": "^2.2.1",
    "@mdx-js/react": "^2.2.1",
    "@next/font": "13.1.2",
    "@next/mdx": "^13.1.2",
    "@tailwindcss/typography": "^0.5.9",
    "browser-monads": "^1.0.0",
    "dotenv": "^16.0.3",
    "eslint": "8.32.0",
    "eslint-config-next": "13.1.2",
    "framer-motion": "^9.0.1",
    "gray-matter": "^4.0.3",
    "mongodb": "^4.13.0",
    "next": "13.1.2",
    "next-seo": "^5.15.0",
    "next-themes": "^0.2.1",
    "preact": "^10.12.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "^8.0.5",
    "react-syntax-highlighter": "^15.5.0",
    "sass": "^1.57.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^13.1.6",
    "@svgr/cli": "^6.5.1",
    "@svgr/webpack": "^6.5.1",
    "autoprefixer": "^10.4.13",
    "cross-env": "^7.0.3",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "inquirer": "^8.1.1",
    "inquirer-datepicker-prompt": "^0.4.3",
    "lint-staged": "^13.1.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.3",
    "slug": "^8.2.2",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "tailwindcss": "^3.2.4"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "prettier --write"
    ]
  }
}
